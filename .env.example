# ===========================================
# Environment Variables - Nest Microservices
# ===========================================
# Copy this file to .env.development and fill in the values.

# --- Node Environment ---
NODE_ENV=development

# --- CORS ---
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:3000

# --- Gateway Service (Port 4000) ---
GATEWAY_SECRET=secure-gateway-secret-dev
PORT=4000
TCP_PORT=5000

# --- Auth Service ---
# PORT=4001
# TCP_PORT=5001
DB_HOST=localhost
DB_PORT=5432
DB_USER=auth_user
DB_PASSWORD=auth_password
DB_NAME=auth_db
JWT_SECRET=change-this-to-a-strong-secret
JWT_EXPIRATION=3600

# --- Feed Service ---
# PORT=4002
# TCP_PORT=5002
FEED_DB_HOST=localhost
FEED_DB_PORT=5432
FEED_DB_USER=feed_user
FEED_DB_PASSWORD=feed_password
FEED_DB_NAME=feed_db

# --- Media Service ---
# PORT=4003
# TCP_PORT=5003
STORAGE_PROVIDER=local
# S3 / MinIO
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=media-uploads
S3_REGION=us-east-1

# --- Notifications Service ---
# PORT=4004
NOTIFICATIONS_DB_HOST=localhost
NOTIFICATIONS_DB_PORT=5432
NOTIFICATIONS_DB_USER=notifications_user
NOTIFICATIONS_DB_PASSWORD=notifications_password
NOTIFICATIONS_DB_NAME=notifications_db
RABBITMQ_URL=amqp://guest:guest@localhost:5672

# --- Infrastructure ---
CONSUL_HOST=localhost
CONSUL_PORT=8500
SERVICE_HOST=host.docker.internal

# --- Redis ---
REDIS_HOST=localhost
REDIS_PORT=6379
